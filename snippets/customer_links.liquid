{% if shop.customer_accounts_enabled %}
  {% if customer  %}
    <li class="toolbar-customer"><a href="/account">Your Account</a></li>
  {% else %}
    <li class="toolbar-customer">
      {{ 'Login' | customer_login_link }}
      {% if shop.customer_accounts_optional %}
      <span class="or">|</span>
      {{ 'Registrate aqui!' | customer_register_link }}
      {% endif %}
    </li>
  {% endif %}
{% endif %}